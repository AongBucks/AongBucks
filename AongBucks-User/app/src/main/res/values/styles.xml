<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- dialog -->
    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="buttonBarNeutralButtonStyle">@style/buttonBarButtonStyleNeutral</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStylePositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyleNegative</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:statusBarColor" tools:targetApi="l">@color/house_green</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="buttonBarButtonStyleNeutral" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>

    <style name="buttonBarButtonStyleNegative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>

    <style name="buttonBarButtonStylePositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_green</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height_size</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="detailDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_detail_height</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="ExpandedAppBar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/menudetail_title_text_size</item>
    </style>

</resources>