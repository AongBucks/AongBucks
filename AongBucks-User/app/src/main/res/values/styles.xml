<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- dialog -->
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="buttonBarNeutralButtonStyle">@style/buttonBarButtonStyleNeutral</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStylePositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyleNegative</item>
    </style>

    <style name="buttonBarButtonStyleNeutral" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>

    <style name="buttonBarButtonStyleNegative" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>

    <style name="buttonBarButtonStylePositive" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent_green</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height_size</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>