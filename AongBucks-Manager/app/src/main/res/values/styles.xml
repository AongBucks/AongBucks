<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AongBucksManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_green</item>
        <item name="colorPrimaryVariant">@color/accent_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/house_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- dialog -->
    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="buttonBarNeutralButtonStyle">@style/buttonBarButtonStyleNeutral</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStylePositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyleNegative</item>
    </style>

    <style name="buttonBarButtonStyleNeutral" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="buttonBarButtonStyleNegative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="buttonBarButtonStylePositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_green</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>
</resources>