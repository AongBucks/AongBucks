<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Text.Regular" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/santana</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Text.Title" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/santana_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Text.light" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/accent_green</item>
        <item name="android:fontFamily">@font/santana</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>